@model SalesViewModel

@section title{
    <div class="row">
        <div class="col-7"><h3>Cashier's Console</h3></div>
        <div class="col-2"><label for="cashier">Cashier's Name:</label></div>
        <div class="col-3">
            @*Display Cashier's name here*@
        </div>
    </div>
}

<br />
<div class="row">
    <div class="col-4">
        <select asp-for="SelectedCategoryID" class="form-control">
            <option>-  Please Select  -</option>
            @if(Model!=null && Model.Categories.Count() > 0)
            {
                foreach (var cat in Model.Categories)
                {
                    <option value="@cat.CategoryID">@cat.Name</option>
                }
            }          
        </select>
        <br />
        <div id="productsPartial">
            @*Product List*@
        </div>
        <br />
        <div id="selectedProductPartial">
            @*Product Details*@
        </div>
        @*Sales form*@
    </div>

    <div class="col">
        @*List of transactions*@
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $("#SelectedCategoryID").on("change", function () {
                $("#productsPartial").load("/products/ProductsByCategoryPartial", { categoryID: $(this).val() });
            })

            $("#productsPartial").on("click", ".product-row", function () {
                $(".product-row").removeClass("highlight");
                $(this).addClass("highlight");
                //val productID = $(this).attr("product-id");
                //alert(productID);
                $("#selectedProductPartial").load("/products/DisplaySelectedProductDetailsPartial", { productID: $(this).attr("product-id") });
            });
        });
    </script>
}