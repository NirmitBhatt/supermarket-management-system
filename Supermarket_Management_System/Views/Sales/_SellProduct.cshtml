@model Product

<div class="form-group">
    <label asp-for="ProductName" class="col-form-label"></label>
    <input type="text" class="form-control" asp-for="ProductName" readonly></input>
</div>

<div class="form-group">
    <label asp-for="Price" class="col-form-label"></label>
    <input type="text" class="form-control" id="price" value="@(string.Format("{0:c}", Model.Price))" readonly></input>
</div>

<form method="post" asp-controller="sales">
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Quantity" class="col-form-label"></label>
        </div>
        <div class="col-3">
            <input type="text" value="0" class="form-control"></input>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
</form>
