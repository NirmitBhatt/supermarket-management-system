@model TransactionsViewModel

@section title {
    <h3>Transactions</h3>
}

<form method="post" asp-controller="transactions" asp-action="search">
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="CashierName" class="col-form-label"></label>
            <input asp-for="CashierName" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="StartDate" class="col-form-label"></label>
            <input type="date" asp-for="StartDate" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="EndDate" class="col-form-label"></label>
            <input type="date" asp-for="EndDate" class="form-control" />
        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Print" />
        </div>
    </div>
</form>