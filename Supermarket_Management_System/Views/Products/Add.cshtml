@model ProductViewModel

@section title{
    <h3>Add Category</h3>
}

<form method="post" asp-controller="product" asp-action="add">

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.CategoryID" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="Product.CategoryID" class="form-control">
                <option>-  Please Select  -</option>
                @if ( Model.Categories != null && Model.Categories.Count()>0 )
                @foreach (var cat in Model.Categories)
                {
                    <option value="@cat.CategoryID">@cat.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.ProductName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Product.ProductName" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Price" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Product.Price" class="form-control" min="0" step="any"/>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Quantity" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Product.Quantity" class="form-control" min="1"/>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Product.Quantity" class="form-control" min="1" />
        </div>
    </div>
</form>