@model List<Category>

@section title{
    <h3>Categories</h3>
}

@if(Model != null && Model.Count() > 0)
{
    <table class="table table-striped"> 
        <thead>
            <tr>
                <th>Name</th>
                <th>Desciption</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td><a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@category.CategoryID">Edit</a></td>
                    <td><a class="btn btn-link" onclick="return confirmDelete()" asp-controller="categories" asp-action="delete" asp-route-id="@category.CategoryID">Delete</a></td>
                </tr>

            }
        </tbody>
    </table>
    <a class="btn btn-primary" role="button" asp-controller="categories" asp-action="add">Add</a>
}

@section Scripts{
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
}